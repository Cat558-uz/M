-- Library criada do zero com drag, scroll e toggle
local Library = {}

-- Serviços
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")

-- GUI principal
local ScreenGui = Instance.new("ScreenGui", PlayerGui)
ScreenGui.Name = "CustomLibrary"
ScreenGui.ResetOnSpawn = false
ScreenGui.IgnoreGuiInset = true

-- Janela principal
local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.Size = UDim2.new(0, 400, 0, 300)
MainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
MainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
MainFrame.BorderSizePixel = 0
MainFrame.Name = "MainFrame"
MainFrame.Active = true
MainFrame.Draggable = true -- Drag GUI ativado

-- Layout das abas
local TabButtons = Instance.new("Frame", MainFrame)
TabButtons.Size = UDim2.new(0, 100, 1, 0)
TabButtons.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
TabButtons.BorderSizePixel = 0

local TabContent = Instance.new("Frame", MainFrame)
TabContent.Position = UDim2.new(0, 100, 0, 0)
TabContent.Size = UDim2.new(1, -100, 1, 0)
TabContent.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
TabContent.BorderSizePixel = 0

-- Layouts
local UIListLayout = Instance.new("UIListLayout", TabButtons)
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder

-- Título principal
function Library:AddTitle(text)
	local title = Instance.new("TextLabel", MainFrame)
	title.Size = UDim2.new(1, 0, 0, 30)
	title.Position = UDim2.new(0, 0, 0, -30)
	title.BackgroundTransparency = 1
	title.Text = text
	title.TextColor3 = Color3.fromRGB(255, 255, 255)
	title.Font = Enum.Font.GothamBold
	title.TextSize = 16
end

-- Tabela de abas
local Tabs = {}

-- Função para criar nova aba
function Library:AddTab(tabName)
	local tabButton = Instance.new("TextButton", TabButtons)
	tabButton.Text = tabName
	tabButton.Size = UDim2.new(1, 0, 0, 30)
	tabButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
	tabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
	tabButton.BorderSizePixel = 0
	tabButton.Font = Enum.Font.Gotham
	tabButton.TextSize = 14

	local scroll = Instance.new("ScrollingFrame", TabContent)
	scroll.Size = UDim2.new(1, 0, 1, 0)
	scroll.CanvasSize = UDim2.new(0, 0, 0, 0)
	scroll.ScrollBarThickness = 4
	scroll.BackgroundTransparency = 1
	scroll.Visible = false
	scroll.AutomaticCanvasSize = Enum.AutomaticSize.Y
	scroll.Name = tabName

	local layout = Instance.new("UIListLayout", scroll)
	layout.SortOrder = Enum.SortOrder.LayoutOrder
	layout.Padding = UDim.new(0, 5)

	Tabs[tabName] = scroll

	tabButton.MouseButton1Click:Connect(function()
		for _, tab in pairs(TabContent:GetChildren()) do
			if tab:IsA("ScrollingFrame") then
				tab.Visible = false
			end
		end
		scroll.Visible = true
	end)

	return {
		AddButton = function(_, text, callback)
			local btn = Instance.new("TextButton", scroll)
			btn.Size = UDim2.new(1, -10, 0, 30)
			btn.Text = text
			btn.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
			btn.TextColor3 = Color3.fromRGB(255, 255, 255)
			btn.Font = Enum.Font.Gotham
			btn.TextSize = 14
			btn.BorderSizePixel = 0
			btn.MouseButton1Click:Connect(callback)
		end,

		AddLabel = function(_, text)
			local lbl = Instance.new("TextLabel", scroll)
			lbl.Size = UDim2.new(1, -10, 0, 25)
			lbl.Text = text
			lbl.BackgroundTransparency = 1
			lbl.TextColor3 = Color3.fromRGB(255, 255, 255)
			lbl.Font = Enum.Font.Gotham
			lbl.TextSize = 14
		end,

		AddTextBox = function(_, placeholder, callback)
			local txt = Instance.new("TextBox", scroll)
			txt.Size = UDim2.new(1, -10, 0, 30)
			txt.PlaceholderText = placeholder
			txt.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
			txt.TextColor3 = Color3.fromRGB(255, 255, 255)
			txt.Font = Enum.Font.Gotham
			txt.TextSize = 14
			txt.BorderSizePixel = 0
			txt.ClearTextOnFocus = false
			txt.FocusLost:Connect(function(enter)
				if enter then
					callback(txt.Text)
				end
			end)
		end,

		AddKeybind = function(_, bindName, callback)
			local lbl = Instance.new("TextLabel", scroll)
			lbl.Size = UDim2.new(1, -10, 0, 25)
			lbl.Text = bindName .. ": Pressione uma tecla"
			lbl.BackgroundTransparency = 1
			lbl.TextColor3 = Color3.fromRGB(200, 200, 200)
			lbl.Font = Enum.Font.Gotham
			lbl.TextSize = 14

			local listening = false
			lbl.InputBegan:Connect(function()
				if not listening then
					listening = true
					lbl.Text = bindName .. ": Aguardando tecla..."
					local connection
					connection = UserInputService.InputBegan:Connect(function(input, gpe)
						if not gpe and input.UserInputType == Enum.UserInputType.Keyboard then
							lbl.Text = bindName .. ": " .. input.KeyCode.Name
							callback(input.KeyCode)
							listening = false
							connection:Disconnect()
						end
					end)
				end
			end)
		end,

		AddToggle = function(_, text, callback)
			local toggle = Instance.new("TextButton", scroll)
			toggle.Size = UDim2.new(1, -10, 0, 30)
			toggle.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
			toggle.TextColor3 = Color3.fromRGB(255, 255, 255)
			toggle.Font = Enum.Font.Gotham
			toggle.TextSize = 14
			toggle.BorderSizePixel = 0

			local state = false
			toggle.Text = "[ OFF ] " .. text

			toggle.MouseButton1Click:Connect(function()
				state = not state
				toggle.Text = (state and "[ ON ] " or "[ OFF ] ") .. text
				callback(state)
			end)
		end
	}
end

return Library
